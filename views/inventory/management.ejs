<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <link rel="stylesheet" href="/path/to/your/styles.css">
</head>
<body>
    <header>
        <h1>Inventory Management</h1>
    </header>

    <!-- Flash messages -->
    <% if (typeof messages !== 'undefined') { %>
        <section class="messages">
            <p><%= messages %></p>
        </section>
    <% } %>

    <!-- Links to add new classification and inventory -->
    <section class="management-links">
        <ul>
            <li><a href="/inv/add-classification">Add New Classification</a></li>
            <li><a href="/inv/add-inventory">Add New Inventory Item</a></li>
        </ul>
    </section>

    <footer>
        <!-- Include common footer partial if available -->
        <% include('../partials/footer') %>
    </footer>
</body>
</html>

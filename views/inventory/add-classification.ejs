<!-- Content Heading -->

<% if (title) { %>
  <h1><%= title %></h1>
  <% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Add Classificiation View -->
<form action="/inv/add-classification" method="post">
  <label for="classification">Classification:</label>
  <br>
  <input type="text" name="classification_name" id="classification" pattern="^[a-zA-Z0-9]*$" title="No spaces or special characters allowed">
  <br>
  <span id="classification-requirements-label">Input may not contain spaces or special characters of any kind.</span> 
  <br>
  <input type="submit" value="Add Classification">
</form>
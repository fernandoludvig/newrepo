<div class="login-section">
    <div class="login-div">
        <%- messages() %>
        <% if (errors) { %>
            <ul class="notice">
           <% errors.array().forEach(error => { %>
             <li><%= error.msg %></li>
          <%  }) %>
           </ul>
          <% } %>
        <form id="account-form" action="/account/register" method="post">
            <label class="account-label" for="account_email">First name:</label>
            <br>
            <input type="text" name="account_firstname" id="user-first" placeholder="first" required
                value="<%= locals.account_firstname %>">
            <br>
            <label class="account-label" for="account_firstname">Last name:</label>
            <br>
            <input type="text" name="account_lastname" id="user-last" placeholder="last" required
                value="<%= locals.account_lastname %>">
            <br>
            <label class="account-label" for="account_lastname">Email address:</label>
            <br>
            <input type="email" name="account_email" id="user-email" placeholder="email" required
                value="<%= locals.account_email %>">
            <br>
            <label class="account-label" for="account_password">Password:</label>
            <br><span id="pw-span">Must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
            <input type="password" name="account_password" id="user-password" 
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                placeholder="password" required>
            <br>
            <div class="button-div">
                <button>Register</button>
                <p class="no-account">Have an account? <a href="/account/login">Login</a></p>
            </div>
        </form>
    </div>
</div>
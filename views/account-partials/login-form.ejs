<div class="login-section">
    <div class="login-div">
        <%- messages() %>
        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        <% } %>
        <form id="loginForm" action="/account/login" method="post"> <!-- Make sure action and method are correct -->
            <label class="account-label" for="account_email">Email:</label>
            <br>
            <input type="email" name="account_email" id="user-email" placeholder="email" required
                value="<%= locals.account_email %>">
            <br>
            <label class="account-label" for="account_password">Password:</label>
            <br><span id="pw-span">Must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
            <input type="password" name="account_password" id="user-password" 
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                placeholder="password" required>
            <br>
            <div class="button-div">
                <button type="submit">LOGIN</button> <!-- Ensure this is a submit button -->
                <p class="no-account">No account? <a href="/account/register">Sign-up</a></p>
            </div>
        </form>
    </div>
</div>

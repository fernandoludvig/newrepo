<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/login.css"> <!-- Link to your CSS file -->
</head>
<body>
    <div class="container">
        <h1><%= title %></h1>

        <!-- Display flash messages if any -->
        <% if (messages && messages.length > 0) { %>
            <div class="flash-messages">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }) %>
            </div>
        <% } %>

        <form action="/login" method="POST"> <!-- Ensure this matches your login route -->
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required aria-label="Email" placeholder="Enter your email">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required aria-label="Password" placeholder="Enter your password">
            </div>
            <button type="submit">Login</button>
        </form>

        <p>Don't have an account? <a href="/account/register">Register here</a>.</p> <!-- Link to registration -->
    </div>
</body>
</html>

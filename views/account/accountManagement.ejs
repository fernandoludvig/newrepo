<!-- Week 5, Learning Activity -->

<!-- Display the Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!-- Display Messages -->
<% message %>

<!-- Display Error Message -->
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Display the Content Body -->
<% if (accountData) { %>
  <% if (accountData.account_type === 'Client') { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    <p>You're logged in.</p>
    <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>
  <% } else if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    <p>You're logged in.</p>
    <p><a href="/account/update/<%= accountData.account_id %>">Edit Account Information</a></p>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
  <% } %>  
<% } %>